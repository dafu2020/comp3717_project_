<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/reset_tv_logo"
        android:layout_width="306dp"
        android:layout_height="89dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="PeePeeBoo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_tv_prom_msg"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Prom msg here"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_tv_logo" />

    <Button
        android:id="@+id/reset_button_resetPasswrod"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:text="Reset Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_textEditor_email"
        app:layout_constraintVertical_bias="0.052" />

    <EditText
        android:id="@+id/reset_textEditor_email"
        android:layout_width="253dp"
        android:layout_height="41dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Enter Email for reset"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_tv_prom_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>