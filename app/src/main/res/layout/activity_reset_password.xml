<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/reset_tv_logo"
        android:fontFamily="@font/mansalva_regular"
        android:layout_width="306dp"
        android:layout_height="89dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/peepeeboo"
        android:textAlignment="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#6BA0C8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reset_textEditor_email"
        android:layout_width="253dp"
        android:layout_height="41dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/enter_email_for_reset"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_tv_prom_msg" />

    <Button
        android:id="@+id/reset_button_resetPasswrod"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:paddingHorizontal="10dp"
        android:text="@string/reset_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/custom_button_1"
        app:layout_constraintTop_toBottomOf="@+id/reset_textEditor_email"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/reset_tv_prom_msg"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/prom_msg_here"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_tv_logo" />

    <ImageView
        android:id="@+id/reset_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/reset_unlock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_button_resetPasswrod"
        app:layout_constraintVertical_bias="0.382"
        app:srcCompat="@drawable/art_unlock" />

</androidx.constraintlayout.widget.ConstraintLayout>